#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../strongloop/node_modules/loopback-sdk-angular-cli/bin/lb-ng" "$@"
  ret=$?
else 
  node  "$basedir/../strongloop/node_modules/loopback-sdk-angular-cli/bin/lb-ng" "$@"
  ret=$?
fi
exit $ret
