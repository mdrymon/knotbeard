#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../strong-mesh-models/bin/sl-meshctl.js" "$@"
  ret=$?
else 
  node  "$basedir/../strong-mesh-models/bin/sl-meshctl.js" "$@"
  ret=$?
fi
exit $ret
